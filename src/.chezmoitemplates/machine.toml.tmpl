{{- $machineType := "desktop" }}
{{- $is_codespace := env "CODESPACES" | not | not -}}
{{- $is_dev_container := env "REMOTE_CONTAINERS" | not | not -}}
{{- $is_wsl := and (eq .chezmoi.os "linux") ( .chezmoi.kernel.osrelease | lower | contains "microsoft") -}}

{{- if eq .chezmoi.os "darwin" }}
{{-   if contains "MacBook" (output "/usr/sbin/system_profiler" "SPHardwareDataType") }}
{{-     $machineType = "laptop" }}
{{-   else }}
{{-     $machineType = "desktop" }}
{{-   end }}
{{- else if eq .chezmoi.os "linux" }}
{{-   if $is_codespace }}
{{-     $machineType = "codespace" }}
{{-   else if $is_dev_container }}
{{-     $machineType = "dev_container" }}
{{-   else if $is_wsl }}
{{-     $machineType = "wsl" }}
{{-   else }}
{{-     $machineType = (output "hostnamectl" "--json=short" | mustFromJson).Chassis }}
{{-   end }}
{{- else if eq .chezmoi.os "windows" }}
{{-   $machineType = (output "powershell.exe" "-NoProfile" "-NonInteractive" "-Command" "if ((Get-CimInstance -Class Win32_Battery | Measure-Object).Count -gt 0) { Write-Output 'laptop' } else { Write-Output 'desktop' }") | trim }}
{{- end }}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- $ephemeral := false -}}
{{- $headless := false -}}
{{- if or ($is_codespace) ($is_dev_container) (eq .chezmoi.username "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

[data.machine]
  type = {{ $machineType | quote }}
  os = {{ .chezmoi.os | quote }}
  mac = {{ eq .chezmoi.os "darwin" }}
  linux = {{ eq .chezmoi.os "linux" }}
  windows = {{ eq .chezmoi.os "windows" }}
  wsl = {{ $is_wsl }}
  codespace = {{ $is_codespace }}
  dev_container = {{ $is_dev_container }}
  ephemeral = {{ $ephemeral }}
  headless = {{ $headless }}
